<?xml version="1.0"?>
<launch>
  <arg name="robot" default="sia_robot"/>
  <arg name="debug" default="false"/>
  <arg name="headless" default="false"/>
  <arg name="x" default="0.0" />
  <arg name="y" default="0.0" />
  <arg name="z" default="0.679" />
  <arg name="yaw" default="0" />
  <arg name="paused" default="false" doc="Starts gazebo in paused mode" />
  <arg name="gui" default="true" doc="Starts gazebo gui" />
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find sia_agv_simulation)/worlds/box.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- send robot urdf to param server -->
  <include file="$(find sia_robot_simulation)/launch/sia_robot_load.launch">
    
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -model sia_agv -param robot_description -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg yaw)" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" ns="/sia_agv" respawn="false" output="screen">
   </node>


  <include file="$(find sia_manipulator_simulation)/launch/controller.launch"/>
  
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find sia_robot_simulation)/config/xacro.rviz" output="screen" />

 
  
  

</launch>
